<UserControl x:Class="Synth.Controls.HomeColumn"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Synth.Controls"
             xmlns:wpfui="clr-namespace:WPFUI.Controls;assembly=WPFUI"
             mc:Ignorable="d" 
             
             d:DesignWidth="400">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height = "*"/>
        </Grid.RowDefinitions>
        <Border CornerRadius="3,3,3,3" Background="{DynamicResource AccentControlElevationBorderBrush}" Margin="5,5,5,5">
            <StackPanel x:Name="hcStackPanel" Height="auto" >
                <TextBox x:Name="ColumnName" Width="390" TextAlignment="Center" IsReadOnly="True" Margin="5,5,5,5"/>
                
                
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
